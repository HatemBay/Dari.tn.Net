@model IEnumerable<Dari.tn.Models.Contract>

@{
    ViewBag.Title = "GetOwned";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}

<h2>GetOwned</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.startDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.totalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.surveillance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.payed)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.surveillance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.payed)
            </td>
            @if (item.payed == 0)
            {
                <td>
                    <button type="button" class="btn btn-primary" style="border-radius:4px !important;">
                        @Html.ActionLink("Pay", "Pay", "ChargeRequestH", new { area = "", id = item.contractId }, null)
                    </button>
                </td>
            }
            else if (item.payed == 1 & item.surveillance == 1)
            {
                <td>
                    <button type="button" class="btn btn-primary" style="border-radius:4px !important;">
                        @Html.ActionLink("Survey", "Index", "Surveillance", new { area = "", id = item.contractId }, null)
                    </button>
                </td>
            }
            else
            {
                <td>
                </td>
            }
        </tr>
    }

</table>
